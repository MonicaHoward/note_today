%div{ class: "content" }
  %div{ class: "container-fluid" }
    %div{ class: "row" }
      %div{ class: "col-lg-12" }
        %div{ class: "card-box" }
          %h4{ class: "m-t-0 header-title" } All Notes
          %hr
            %table{ class: "table" }
              %thead
              %tr
                %th Date Created
                %th Note Title
                %th Note Snippet
                %th Word Count
                %th Read Time
                - unless @notes.blank?
                  - @notes.each do |note|
                    %a{ href: (url_for [note])}
                      .note
                        %p.title= note.title
                        %p.date= time_ago_in_words (note.created_at)
                        %p.content= truncate(note.content, length: 50)
                - else
                  %h2 Create Doc !
                  %p Start Creating Documents and Organizing Your Life!
                  %button= link_to "New Note", new_note_path


