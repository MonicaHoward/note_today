%div{ class: "content" }
  %div{ class: "container-fluid" }
    %div{ class: "row" }
      %div{ class: "col-lg-12" }
        %div{ class: "card-box" }
          %h2 Sign In
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %div{ class: "form-inputs" }
              = f.input :email, required: false, autofocus: true, placeholder: "guest@demo.com"
              = f.input :password, required: false, placeholder: "123456"
              = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
            %div{ class: "form-actions"}
              = f.submit :submit, class: "btn btn-block btn-success waves-light waves-effect"

